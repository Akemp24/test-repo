<html>
  <head>
    <title>User Profile</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100">
    <div class="flex justify-center items-center h-screen">
      <div
        class="max-w-md p-8 bg-white rounded-xl shadow-md text-center text-pink-600"
      >
        <img
          src="profile-picture.jpg"
          alt="Profile Picture"
          class="w-20 h-20 mx-auto rounded-full mb-4"
        />
        <h2 class="text-2xl font-semibold mb-2">{{userName}}</h2>
        <p class="text-sm mb-4">Email: {{userEmail}}</p>
        <div class="border-t border-pink-600 rounded-3xl pt-4">
          <h3 class="text-lg font-semibold mb-2">Saved Items</h3>
          <ul class="space-y-2">
            {{#each savedItems}}
              <li class="text-sm text-gray-600">{{this}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>