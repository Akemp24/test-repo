<body class="bg-gray-100 flex justify-center items-center">
    <!-- Container to center the content and move it down -->
    <div></div>
    <div class="flex justify-center items-center mt-10">
      <div class="mt-32 border border-pink-600 p-8 rounded-lg w-96 bg-white">
        <h1 class="text-2xl font-semibold mb-4">Sign Up</h1>
        <form action="/signup" method="post">
          <label for="first_name" class="block mb-2">First Name:</label>
          <input
            type="text"
            id="first_name"
            name="first_name"
            required
            class="w-full p-2 border border-gray-300 rounded-md mb-4"
          />

          <label for="last_name" class="block mb-2">Last Name:</label>
          <input
            type="text"
            id="last_name"
            name="last_name"
            required
            class="w-full p-2 border border-gray-300 rounded-md mb-4"
          />

          <label for="email" class="block mb-2">Email:</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full p-2 border border-gray-300 rounded-md mb-4"
          />

          <label for="username" class="block mb-2">Username:</label>
          <input
            type="text"
            id="username"
            name="username"
            required
            class="w-full p-2 border border-gray-300 rounded-md mb-4"
          />

          <label for="password" class="block mb-2">Password:</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="w-full p-2 border border-gray-300 rounded-md mb-4"
          />

          <button
            type="submit"
            class="bg-pink-600 text-white px-4 py-2 rounded-md"
          >Sign Up</button>
        </form>
      </div>
    </div>
</div>
    <script src="path/to/handlebars.js"></script>
    <script src="path/js/script.js"></script>
  </body>
