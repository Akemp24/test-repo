<html lang="en">

  <body class="bg-white">

    <div class="venue-details-container mx-auto p-8">
      <div class="bg-white rounded-lg shadow-lg">
        <img
          src="{{venue.imageUrl}}"
          alt="{{venue.name}} Image"
          class="w-full h-48 object-cover rounded-t-lg"
        />
        <div class="p-6">
          <h2 class="text-xl font-bold mb-2">{{venue.name}}</h2>
          <p class="text-gray-600 mb-4">{{venue.description}}</p>
          <p class="text-gray-900 font-bold text-xl">${{venue.price}}</p>

        </div>
      </div>
    </div>
  </body>
</html>