<div class="flex justify-center items-center pt-96 ">
  <div class="border border-pink-600 p-8 rounded-lg mb-32 w-96">
    <h1 class="text-2xl font-semibold mb-4">Login</h1>
    <form>
      <label for="username" class="block mb-2">Username:</label>
      <input
        type="text"
        id="username"
        name="username"
        required
        class="w-full p-2 border border-gray-300 rounded-md mb-4"
      />
<div>
   
      <label for="password" class="block mb-2">Password:</label>
      <input
        type="password"
        {{!-- use id to capture values for body of api call --}}
        id="password"
        name="password"
        required
        class="w-full p-2 border border-gray-300 rounded-md mb-4"
      />

      <button
        type="submit"
        class="bg-pink-600 text-white px-4 py-2 rounded-md"
      >Log In</button>
    </form>
  </div> 
</div>
